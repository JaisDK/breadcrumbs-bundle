{% spaceless %}
    <ol class="breadcrumb">
        {% for node in breadcrumbs %}
            {% if not loop.last %}
                <li><a href="{{ node.path }}">{{ node.label|capitalize }}</a></li>
            {% else %}
                <li class="active">{{ node.label|capitalize }}</li>
            {% endif %}
        {% endfor %}
    </ol>
{% endspaceless %}
