{% spaceless %}
    <ol class="custom-breadcrumb">
        {% for node in breadcrumbs %}
            {% if not loop.last %}
                <li><a href="{{ node.path }}">{{ node.label|upper }}</a></li>
            {% else %}
                <li class="active">{{ node.label|upper }}</li>
            {% endif %}
        {% endfor %}
    </ol>
{% endspaceless %}
