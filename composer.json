{
    "name": "yceruto/breadcrumbs-bundle",
    "type": "symfony-bundle",
    "description": "Friendly breadcrumbs for Symfony applications.",
    "keywords": [
        "symfony", "breadcrumbs"
    ],
    "homepage": "https://github.com/yceruto/breadscrumbs-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "yonelceruto@gmail.com"
        }
    ],
    "require": {
        "php"                         : ">=7",
        "symfony/framework-bundle"    : "~4.0",
        "symfony/expression-language" : "~4.0",
        "twig/twig"                   : "~1.14,>=1.14.2|~2.0"
    },
    "require-dev": {
        "phpunit/phpunit"             : "~4.4",
        "psr/log"                     : "~1.0"
    },
    "autoload": {
        "psr-4": { "Yceruto\\Bundle\\BreadcrumbsBundle\\": "" },
        "exclude-from-classmap": ["/Tests/"]
    }
}

